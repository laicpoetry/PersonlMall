<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cwb.dao.ICartDao">

    <resultMap id="BaseResultMap" type="com.cwb.domain.po.Cart">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="itemId" column="item_id"/>
        <result property="num" column="num"/>
        <result property="name" column="name"/>
        <result property="spec" column="spec"/>
        <result property="price" column="price"/>
        <result property="image" column="image"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,user_id,item_id,num,name,spec,
        price,image,create_time,update_time
    </sql>
    <insert id="insert" parameterType="com.cwb.domain.po.Cart">
        insert into cart(user_id, item_id, name, spec,
                         price, image, create_time, update_time)
        values (#{userId}, #{itemId},#{name}, #{spec},
                #{price}, #{image}, #{createTime}, #{updateTime})

    </insert>
    <update id="updateNum">
        update cart
        set num = num + 1
        where item_id = #{itemId}
          and user_id = #{userId}
    </update>

    <select id="selectByItemIdAndUserId" resultType="integer">
        select COUNT(*)
        from cart
        where item_id = #{itemId}
        and user_id = #{userId}
    </select>

    <select id="countByUserId" resultType="java.lang.Integer">
        select COUNT(*)
        from cart
        where user_id = #{userId}
    </select>

    <select id="selectByUserId" resultType="com.cwb.domain.po.Cart">
        select
            <include refid="Base_Column_List"></include>
        from cart
        where user_id = #{userId}
    </select>


</mapper>
